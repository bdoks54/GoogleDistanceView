<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="4dp"
        android:id="@+id/relativeLayout"
        android:layout_gravity="center_vertical"
        >
        <com.bdoks54.googledistance04view01.ClockView
            android:layout_width = "100dp"
            android:layout_height = "100dp"
            android:id="@+id/clockview"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/clockview"
            android:text="Asia/Seoul"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/tvtimezone"
            />

        <TextView
            android:id="@+id/tvtimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtimezone"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clockview"
            android:text="2016-10-04 오전" />

        <TextView
            android:id="@+id/tvlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtimes"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clockview"
            android:text="Korea" />

        <TextView
            android:id="@+id/tvlatlng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlocation"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clockview"
            android:text="37.567000, 126.980700" />


    </RelativeLayout>
</LinearLayout>